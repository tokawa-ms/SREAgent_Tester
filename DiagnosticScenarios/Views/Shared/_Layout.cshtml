@using Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Microsoft.AspNetCore.Localization
@inject IHtmlLocalizer<DiagnosticScenarios.Resources.SharedResources> SharedLocalizer

@{
    var requestCultureFeature = Context.Features.Get<IRequestCultureFeature>();
    var currentCulture = requestCultureFeature?.RequestCulture.Culture.TwoLetterISOLanguageName ?? "ja";
}

<!DOCTYPE html>
<html lang="@currentCulture">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @SharedLocalizer["Nav.Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">@SharedLocalizer["Nav.Title"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    @{ 
                        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
                        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
                    }
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "Index" ? "active" : string.Empty)" asp-controller="Home" asp-action="Index" aria-current="@(currentController == "Home" && currentAction == "Index" ? "page" : null)">@SharedLocalizer["Nav.Home"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(currentController == "Home" && currentAction == "ToggleScenarios" ? "active" : string.Empty)" asp-controller="Home" asp-action="ToggleScenarios" aria-current="@(currentController == "Home" && currentAction == "ToggleScenarios" ? "page" : null)">@SharedLocalizer["Nav.ToggleScenarios"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/swagger" target="_blank">@SharedLocalizer["Nav.ApiDocs"]</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <span id="currentLanguage">üåê</span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="languageDropdown">
                                <li>
                                    <form method="post" action="/Language/SetLanguage" style="margin: 0;">
                                        <input type="hidden" name="culture" value="ja" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="dropdown-item" style="background: none; border: none; width: 100%; text-align: left; cursor: pointer;">@SharedLocalizer["Language.Japanese"]</button>
                                    </form>
                                </li>
                                <li>
                                    <form method="post" action="/Language/SetLanguage" style="margin: 0;">
                                        <input type="hidden" name="culture" value="en" />
                                        <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                        <button type="submit" class="dropdown-item" style="background: none; border: none; width: 100%; text-align: left; cursor: pointer;">@SharedLocalizer["Language.English"]</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container mt-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light mt-5 py-3">
        <div class="container">
            <div class="text-center text-muted">
                <small>@SharedLocalizer["Footer.Copyright"]</small>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
